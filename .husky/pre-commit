#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Backend checks
echo "📦 Checking backend..."
cd backend
npm run lint
npm run format:check
npm run type-check
cd ..

# Frontend checks
echo "📱 Checking frontend..."
cd frontend
flutter analyze
dart format --output=none --set-exit-if-changed .
cd ..

echo "✅ Pre-commit checks passed!"
